<div class="form-box" id="login-box">
    <div class="header">FARMA-ALG <%= @subdomain %></div>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:class=>"form-signin") do |f| %>
        <div class="body bg-gray">

          <div class="form-group">
            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: "Senha", class: "form-control" %>
          </div>

          <div class="footer">
            <div><%= f.submit "Entrar", :class => "btn bg-olive btn-block"  %></div>
          </div>

          <div class="margin text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
