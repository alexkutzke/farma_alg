<div class="form-box" id="login-box">
    <div class="header">
      <h3>FARMA-ALG <%= "(#{request.subdomain.split('.').first.upcase})" unless request.subdomain == "" %></h3>
      Registro de novo usu√°rio
    </div>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="body bg-gray">
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.text_field :name, placeholder: "Nome", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group">
            <div class="radio">
              <%= f.radio_button :prof, 'false', :checked => true %>
              <%= f.label :prof_false, 'Aluno' %>
              <%= f.radio_button :prof, 'true' %>
              <%= f.label :prof_true, 'Professor' %>
            </div>
        </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: "Senha", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "Confirme a senha", class: "form-control" %>
          </div>

          <div class="footer">
            <div><%= f.submit "Registrar", :class => "btn bg-olive btn-block"  %></div>
          </div>

          <div class="margin text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
