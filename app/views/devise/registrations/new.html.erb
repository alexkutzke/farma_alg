<h4>Registro</h4>
<hr>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "Nome completo:" %>
    <%= f.text_field :name %>
  </div>

  <div class="field"><%= f.label :email ,"E-mail:" %>
  <%= f.email_field :email %></div>

  <div class="field">Tipo de usu√°rio:<br>
  <%= f.radio_button :prof, 'false', :checked => true %>
  <%= f.label :prof_false, 'Aluno' %>
  <%= f.radio_button :prof, 'true' %>
  <%= f.label :prof_true, 'Professor' %>
  </div>
  <br>

  <div class="field"><%= f.label :password, "Senha:" %>
  <%= f.password_field :password %></div>

  <div class="field"><%= f.label :password_confirmation, "Confirme senha:" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="form-actions">
    <div><%= f.submit "Submeter", :class => "btn btn-primary"  %></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
