<% if  current_user.admin? or current_user.id == @team.owner_id %>

  <!-- Content Header (Page header) -->
  <section class="content-header">
      <h1>
          Turma
          <small>Analise o desempenho da sua turma</small>
      </h1>
      <ol class="breadcrumb">
          <li><i class="fa fa-home"></i> <%= link_to "Home", dashboard_home_path %></li>
          <li><i class="fa fa-users active"></i> Turma "<%= @team.name %>"</li>
      </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
          <section class="col-lg-6">
            <div class="box box-solid">
                <div class="box-header">
                    <h3 class="box-title">Objetos de aprendizagem já utilizados nesta turma</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <% @los.each do |lo| %>
                    <section class="well">
                      <header class="clearfix">
                        <div class="left">
                          <h4><%= link_to lo.name, overview_panel_team_lo_path(@team, lo)%>
                            <% unless @team.lo_ids.include?(lo.id) %>
                              <span class="date-info">(atualmente não disponível para os alunos)</span>
                            <% end %>
                          </h4>
                        </div>
                      </header>
                    </section>
                  
                  <% end %>
              </div>
            </div>
          </section>

          <section class="col-lg-6">
            <div class="box box-solid">
                <div class="box-header">
                    <h3 class="box-title">Alunos matriculados nesta turma</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table class="table table-hover table-bordered">
                    <tr>
                      <th>Nome</th>
                      <th>Progresso</th>
                    </tr>
                    <% @team.users.sort_by{|x| x.name.downcase}.each do |u| %>

                      <tr>
                        <td><%= link_to u.name, panel_team_user_path(@team, u)%> <small>(<%= u.email %>)</small> <small><%= "(Seu próprio usuário)" if u.id ==current_user.id %></small></td>
                        <td>
                          <div class="progress xs" style="width:70px;">
                            <% p = 100 * u.progress_team(@team.id) %>
                            <% if p == 100 %>
                              <% style = "success" %>
                            <% elsif p > 49 %>
                              <% style = "yellow" %>
                            <% else %>
                              <% style = "danger" %>
                            <% end %>
                            <div class="progress-bar progress-bar-<%=style%>" style="width: <%= p %>%"></div>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </table>
                </div>
            </div>
          </section>
      </div>

      <div class="row">
          <section class="col-lg-12">
            <div class="box box-solid">
                <div class="box-header">
                    <h3 class="box-title">Últimas respostas nesta turma</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <% @answers.each do |a| %>
                    <% if a.correct %>
                      <div class="callout callout-info">
                    <% else %>
                      <div class="callout callout-danger">
                    <% end %>
                      <h4>
                        <%= a.user.name + " @ " + a.question.title + " #" + a.try_number.to_s %> <small><i class="fa fa-clock-o"></i> há <%= time_ago_in_words a.updated_at %></small>
                        <span class='label label-default answer-btn' style='cursor:pointer;' data-id="<%= a.id %>"> <i class='fa fa-eye'></i></span>
                      </h4>
                    </div>
                  <% end %>
              </div>
            </div>
          </section>
      </div>
  </section>
<% end %>