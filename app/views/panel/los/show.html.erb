          <li><i class="fa fa-users"></i> <%= link_to "Turma \"#{@team.name}\"", panel_team_path(@team.id) %></li>
          <li><i class="fa fa-user"></i> <%= link_to @user.name, panel_team_user_path(@team.id,@user.id) %></li>
          <li><i class="fa fa-check"></i> <%= @lo.name %></li>
      </ol>
  </section>

  <!-- Main content -->
