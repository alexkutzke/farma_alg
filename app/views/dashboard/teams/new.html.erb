<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Nova turma <small>crie uma nova turma</small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i> <%= link_to "Home", dashboard_home_path %></li>
        <li class="active"><i class="fa fa-users"></i> Nova turma</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">    
            <div class="box box-solid">
                <div class="box-header">
                  <h3 class="box-title">Nova turma</h3>
                </div>
                <div class="box-body">
                    <%= form_for(@team,:url => url_for(:controller => 'dashboard/teams', :action => 'create')) do |f|   %>
                      <% if @team.errors.any? %>
                        <div class="panel panel-danger">
                          <div class="panel-heading">
                            Não pode ser salvo devido à <%= pluralize(@team.errors.count, "erro")
                          %>:
                          </div>

                          <div class="panel-body">
                            <ul>
                            <% @team.errors.full_messages.each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                            </ul>
                          </div>
                        </div>
                      <% end %>

                      <div class="form-group">
                        <%= f.label "Nome" %><br />
                        <%= f.text_field :name,:class => "form-control input-sm" %>
                      </div>
                      <div class="form-group">
                        <%= f.label "Senha para matrícula" %><br />
                        <%= f.text_field :code,:class => "form-control input-sm"%>
                      </div>
                      <div class="actions">
                        <%= f.submit "Salvar", :class => "btn btn-primary" %>
                        <%= link_to dashboard_teams_available_path do %>
                          <%= button_tag "Cancelar", :type => "button", :class => "btn btn-info" %>
                        <% end %>
                      </div>
                    <% end %>
                </div><!-- /.box-body -->
            </div>    
        </div>
    </div>
</section>




