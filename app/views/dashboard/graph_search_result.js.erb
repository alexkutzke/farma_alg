
$("#graph-search-result").html("<%= escape_javascript(render(:partial => 'graph_search_result', :locals => {:as => @as, :total => @total}))%>");

$("form.search-bar").attr("action",$("form.search-bar").data("original-path"));

$("#search-result-container").show();

var i=0;

$('.answer').each(function() {
	$(this).hide();
});

$('.answer').each(function() {
  $(this).delay((i++)*50).fadeIn();
});

$("td .add-answer").click(function(e){
  addAnswer($(this).data("id"));
});

$("#add-all").click(function(){
	var answer_ids = [];

	$("#search-result-container").hide();
  $("tr.answer").each(function(e){
    answer_ids.push($(this).data("answer-id"));
  });

	addGroup(answer_ids);
});

$("td .add-connected-component").click(function(){
	$("#search-result-container").hide();
	addConnectedComponent($(this).data("id"));
});

$("td .add-similar").click(function(){
	$("#search-result-container").hide();
	addSimilar($(this).data("id"));
});
