$("#search_result").html("<%= escape_javascript(render(:partial => 'search_result', :locals => {:as => @as, :button_add => @button_add}))%>");

var i=0;

$('.answer').each(function() {
	$(this).hide();
});

$('.answer').each(function() {
	$(this).delay((i++)*50).fadeIn();
});

$(".answer-btn").click(function(){
  $.ajax({
    url: "/dashboard/answers/show",
    data: {
      id: $(this).data("id")
    },
    type: "get"
  });
});


$("span.label").tooltip();

if(searchResultCallback && typeof(searchResultCallback) == "function")
  searchResultCallback();
