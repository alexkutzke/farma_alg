<section>
  <header class="separator">
    <h2 class="center">Perfil de {{name}}</h2>
  </header>
  <article>
    <form id="update-user-form" class="form-vertical" novalidate>
      <input id="id" name="id" type="hidden" />
      <fieldset>
        <div id="name_group" class="control-group">
          <label class="control-label" for="login_user_name">Nome</label>
          <div class="controls">
            <input id="name" name="name" type="text" required="required" />
          </div>
        </div>
        <div id="email_group" class="control-group">
          <label class="control-label" for="login_user_email">Email</label>
          <div class="controls">
            <input id="email" name="email" type="email" required="required" />
          </div>
        </div>
        <div id="new_password_group" class="control-group">
          <label class="control-label" for="login_user_new_password">Se desejar, preencha uma nova senha</label>
          <div class="controls">
            <input id="new_password" name="new_password" type="password" />
          </div>
        </div>
        <div id="current_password_group" class="control-group">
          <label class="control-label" for="login_user_current_password">Preencha sua senha atual para confirmar a atualização</label>
          <div class="controls">
            <input id="current_password" name="current_password" type="password" required="required" />
          </div>
        </div>

        <div class="form-actions">
          <input id="update_user_btn" type="submit" value="Atualizar" class="btn btn-primary" />
        </div>
      </fieldset>
    </form>
  </article>
</section>
