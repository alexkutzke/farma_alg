    <div class="control-group output_group">
        <label class="control-label" for="output">Saída</label>
        <div class="controls">
          <textarea style="width:100%; height:150px;" id="output" name="output"></textarea>
        </div>
    </div>

    <div class="control-group timeout_group">
        <label class="control-label" for="timeout">
          Tempo máximo de execução (em segundos)
          <input id="timeout" name="timeout" type="text" required="required" class='span1' />
      </label>
    </div>

    <div class="control-group ignore_presentation_group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" name='ignore_presentation'> Ignorar diferenças de tabulação
          <i rel="tooltip" data-toggle="tooltip" data-placement="top" title data-original-title="Diferenças entre caracteres de espaços, quebras de linha, e outras tabulações serão ignoradas durante a comparação com a saída da resposta do aluno"  class="icon-question-sign"></i>
        </label>
      </div>
    </div>

    <div class="control-group show_input_output_group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" name='show_input_output'> Apresentar entrada e saída para os alunos
        </label>
      </div>
    </div>

    <div class="form-actions">
      <input type="submit" value="Salvar" class="btn btn-primary" />
      <input type="button" value="Cancelar" class="btn btn-primary btn-cancel" />
    </div>

  </fieldset>
</form>
